{% extends "baseAdmin.html.twig" %}
{% block body %}
    <h1>Enquiry List</h1>
    <table class="table table-bordered table-dark table-hover">
        <tr>
            <th style="width: 20%">Dated</th>
            <td>{{enquiry.createdOn|date('d M Y h:i s a')}}</td>
        </tr>
        <tr>
            <th>Sender Name</th>
            <td>{{enquiry.name}}</td>
        </tr>
        <tr>
            <th>Sender Email</th>
            <td><a href="mailto:{{enquiry.email}}"><i class="fa fa-envelope-o"></i> {{enquiry.email}}</a></td>
        </tr>
        {% for item in custom %}
            <tr>
                <th>{{item.kay|capitalize}}</th>
                <td>{{item.value}}</td>
            </tr>
        {% endfor %}
        <tr>
            <th>Message</th>
            <td>{{enquiry.query}}</td>
        </tr>

    </table>
    <a href="{{path('myadmin_enquiry')}}" class="btn btn-warning  btn-sm"  style="font-weight: normal"><i class="fa fa-reply"></i> Back to List</a>
    <a href="" class="btn btn-danger  btn-sm"  style="font-weight: normal"><i class="fa fa-trash"></i> Delete</a>
{% endblock %}