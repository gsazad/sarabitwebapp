{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <h1>Procat</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ proCat.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ proCat.name }}</td>
            </tr>
            <tr>
                <th>Parent</th>
                <td>{{ proCat.parent }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('myadmin_procat_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('myadmin_procat_edit', { 'id': proCat.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
