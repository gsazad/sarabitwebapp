{% extends 'baseAdmin.html.twig' %}


{% block body %}
    <h1>YtGallery index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Url</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for yt_gallery in yt_galleries %}
            <tr>
                <td>{{ yt_gallery.id }}</td>
                <td>{{ yt_gallery.title }}</td>
                <td>{{ yt_gallery.description }}</td>
                <td>{{ yt_gallery.url }}</td>
                <td>
                    <a href="{{ path('yt_gallery_show', {'id': yt_gallery.id}) }}">show</a>
                    <a href="{{ path('yt_gallery_edit', {'id': yt_gallery.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('yt_gallery_new') }}">Create new</a>
{% endblock %}
