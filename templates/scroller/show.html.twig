{% extends "baseAdmin.html.twig" %}

{% block body %}
    <h1>Scroller</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ scroller.id }}</td>
            </tr>
            <tr>
                <th>Header</th>
                <td>{{ scroller.header }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ scroller.description }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ scroller.url }}</td>
            </tr>
            <tr>
                <th>Filedata</th>
                <td>{{ scroller.filedata }}</td>
            </tr>
            <tr>
                <th>Filetype</th>
                <td>{{ scroller.filetype }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('myadmin_scroller_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('myadmin_scroller_edit', { 'id': scroller.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
