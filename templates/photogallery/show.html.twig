{% extends "baseAdmin.html.twig" %}

{% block body %}
    <h1>Photogallery</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ photoGallery.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ photoGallery.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ photoGallery.description }}</td>
            </tr>
            <tr>
                <th>Albumid</th>
                <td>{{ photoGallery.albumId }}</td>
            </tr>
            <tr>
                <th>Createdon</th>
                <td>{% if photoGallery.createdOn %}{{ photoGallery.createdOn|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('myadmin_photogallery_index',{'albumId': photoGallery.albumId}) }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('myadmin_photogallery_edit', { 'id': photoGallery.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
